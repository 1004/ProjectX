<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="am.project.x">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".ProjectXApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.welcome.WelcomeActivity"
            android:theme="@style/WelcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.MainActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".activities.widgets.gradienttabstrip.GradientTabStripActivity"
            android:label="@string/gradienttabstrip_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github.com"
                    android:pathPrefix="/AlexMofer/ProjectX/tree/master/gradienttabstrip"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.widgets.tagtabstrip.TagTabStripActivity"
            android:label="@string/tagtabstrip_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github.com"
                    android:pathPrefix="/AlexMofer/ProjectX/tree/master/tagtabstrip"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.widgets.indicatortabstrip.IndicatorTabStripActivity"
            android:label="@string/indicatortabstrip_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github.com"
                    android:pathPrefix="/AlexMofer/ProjectX/tree/master/indicatortabstrip"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.widgets.shapeimageview.ShapeImageViewActivity"></activity>
    </application>

</manifest>