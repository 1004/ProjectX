<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="am.project.x">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".ProjectXApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WidgetListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewWidgetActivity"
            android:label="@string/newwidget" />
        <activity
            android:name=".activities.WechatActivity"
            android:label="@string/wechat" />
        <activity
            android:name=".activities.BilateralPaneActivity"
            android:label="@string/bilateralpane" />
        <activity
            android:name=".activities.DotpagerActivity"
            android:label="@string/dotpager" />
        <activity
            android:name=".activities.IndicatorTabActivity"
            android:label="@string/supertab">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github.com"
                    android:pathPrefix="/AlexMofer/GradientPagerTabStrip"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SwipeRefreshActivity"
            android:label="@string/swiperefresh" />
        <activity
            android:name=".activities.DragGridViewActivity"
            android:label="@string/draggridview" />
        <activity
            android:name=".activities.ShapeImageViewActivity"
            android:label="@string/shapeimage" />
        <activity
            android:name=".activities.CityListActivity"
            android:label="@string/citylist" />
        <activity
            android:name=".activities.SharpCornerBoxActivity"
            android:label="@string/sharpcornerbox" />
        <activity
            android:name=".activities.ConnectImageActivity"
            android:label="@string/connectimage" />
        <activity
            android:name=".activities.StateFrameActivity"
            android:label="@string/stateframe" />
        <activity
            android:name=".activities.ReplaceActivity"
            android:label="@string/replace" />
        <activity
            android:name=".activities.DrawableRatingBarActivity"
            android:label="@string/drawableratingbar" />
        <activity
            android:name=".activities.WrapActivity"
            android:label="@string/wrap" />
        <activity
            android:name=".activities.PrinterActivity"
            android:label="@string/printer" />
        <activity
            android:name=".activities.SecurityCodeActivity"
            android:label="@string/security_code" />
        <activity
            android:name=".activities.LoadingActivity"
            android:label="@string/loading_drawable" />
        <activity
            android:name=".activities.SecurityActivity"
            android:label="@string/security_check" />
        <activity
            android:name=".activities.CipherActivity"
            android:label="@string/cipher" />
    </application>

</manifest>