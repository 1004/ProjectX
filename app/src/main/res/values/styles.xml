<resources>

    <style name="DrawerActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out_to_back</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_in_from_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out_to_right</item>
    </style>

    <style name="GradualActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_show_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_hide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_show_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_hide_out</item>
    </style>

    <style name="MainActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_show_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_hide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_in_from_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out_to_right</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="displayOptions">homeAsUp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_action_back</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize_Toolbar</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
